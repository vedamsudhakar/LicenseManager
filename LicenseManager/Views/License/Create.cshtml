@model LicenseManager.ViewModels.ClientApplicationLicenseViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>New License Creation</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*  <div class="form-group">
                <label asp-for="LicenseId" class="control-label"></label>
                <input asp-for="LicenseId" class="form-control" value="@ViewBag.LicenseId" disabled />
                <span asp-validation-for="LicenseId" class="text-danger"></span>
            </div>  *@

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ClientApplicationMapping.FkClientId" class="control-label">Customer</label>
                    @Html.DropDownListFor(model => model.ClientApplicationMapping.FkClientId, (SelectList)ViewBag.Clients, "Select Client", new { @class = "form-control" })
                    <span asp-validation-for="ClientApplicationMapping.FkClientId" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="ClientApplicationMapping.FkApplicationId" class="control-label">Application</label>
                    @Html.DropDownListFor(model => model.ClientApplicationMapping.FkApplicationId, (SelectList)ViewBag.Applications, "Select Application", new { @class = "form-control" })
                    <span asp-validation-for="ClientApplicationMapping.FkApplicationId" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ClientApplicationMapping.StartDate" class="control-label"></label>
                    <input asp-for="ClientApplicationMapping.StartDate" class="form-control" />
                    <span asp-validation-for="ClientApplicationMapping.StartDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="ClientApplicationMapping.EndDate" class="control-label"></label>
                    <input asp-for="ClientApplicationMapping.EndDate" class="form-control" />
                    <span asp-validation-for="ClientApplicationMapping.EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="ClientApplicationMapping.ActivationsCount" class="control-label"></label>
                    <input asp-for="ClientApplicationMapping.ActivationsCount" class="form-control" />
                    <span asp-validation-for="ClientApplicationMapping.ActivationsCount" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    @* <div class="form-group">
                        <label asp-for="ClientApplicationMapping.LicenseId" class="control-label"></label>
                        <input asp-for="ClientApplicationMapping.LicenseId" class="form-control" value="@ViewBag.LicenseId" />
                        <span asp-validation-for="ClientApplicationMapping.LicenseId" class="text-danger"></span>
                    </div> *@
                    <input asp-for="ClientApplicationMapping.LicenseId" type="hidden" value="@ViewBag.LicenseId" />
                </div>
            </div>


            <h3>Assign Features</h3>
            <div style="max-height:400px; overflow-y:auto; border:1px solid #ccc; padding:10px; width: 100%;">
                @if (Model.LicensedFeatures.Count > 0)
                {
                    <table class="table table-bordered table-striped table-sm" style="width: 100%;">
                        <thead class="thead-light">

                            <tr>
                                <th style="width: 20%;">@Html.DisplayNameFor(model => model.LicensedFeatures[0].GroupName)</th>
                                <th style="width: 20%;">@Html.DisplayNameFor(model => model.LicensedFeatures[0].Name)</th>
                                <th style="width: 20%;">@Html.DisplayNameFor(model => model.LicensedFeatures[0].TotalUsageCount)</th>
                                <th style="width: 20%;">@Html.DisplayNameFor(model => model.LicensedFeatures[0].Attribute)</th>
                                <th style="width: 20%;">@Html.DisplayNameFor(model => model.LicensedFeatures[0].Attribute2)</th>
                            </tr>

                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.LicensedFeatures.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Model.LicensedFeatures[i].GroupName
                                        <input type="hidden" name="LicensedFeatures[@i].GroupName" value="@Model.LicensedFeatures[i].GroupName" />
                                    </td>
                                    <td>
                                        @Model.LicensedFeatures[i].Name
                                        <input type="hidden" name="LicensedFeatures[@i].Name" value="@Model.LicensedFeatures[i].Name" />
                                    </td>
                                    <td>
                                        <select class="form-control form-control-sm" name="LicensedFeatures[@i].TotalUsageCount" style="max-width: 80px;">
                                            <option value="">--</option>
                                            @for (int j = 1; j <= 100; j++)
                                            {
                                                <option value="@j" selected="@(Model.LicensedFeatures[i].TotalUsageCount == j ? "selected" : null)">@j</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" name="LicensedFeatures[@i].Attribute" value="@Model.LicensedFeatures[i].Attribute" class="form-control form-control-sm" />
                                    </td>
                                    <td>
                                        <input type="text" name="LicensedFeatures[@i].Attribute2" value="@Model.LicensedFeatures[i].Attribute2" class="form-control form-control-sm" />
                                    </td>
                                </tr>
                            }

                        </tbody>

                    </table>
                }
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
